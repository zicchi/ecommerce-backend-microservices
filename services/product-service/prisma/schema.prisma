generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  description    String?
  price          Decimal  @db.Decimal(10, 2)
  stock_quantity Int      @default(0)
  created_at     DateTime @default(now())

  @@map("products")
}
